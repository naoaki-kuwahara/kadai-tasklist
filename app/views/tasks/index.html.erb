<% if logged_in? %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>
<ul>
   <% @tasks.each do |task| %>
     <li><%= link_to task.id, task %> :<%= task.status %> &gt; <%= task.content %></li>
     <% end %>
      <li><%= link_to '新規タスクの投稿', new_task_path %></li>
</ul>
<% else %>
<h1>タスク一覧</h1>

<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.id, task %> :<%= task.status %> &gt; <%= task.content %></li>
  <% end %>
</ul>


<li><%= link_to '新規タスクの投稿', new_task_path %></li>
<li><%= link_to 'Login', login_path %></li>
<li><%= link_to '新規登録', signup_path, class: 'btn btn-lg btn-primary' %></li>
<% end %>